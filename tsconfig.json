{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "lib": [
            "es2015",
            "dom"
        ],
        "alwaysStrict": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "importHelpers": true,
        "jsx": "react",
        "outDir": "build",
        "rootDir": "src",
        "noEmitOnError": false,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "strictNullChecks": false,
        "suppressImplicitAnyIndexErrors": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/index.native.tsx"
    ],
    "compileOnSave": false
}
